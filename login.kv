#:include connected.kv

<Login>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'vegetables.jpg'
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50
        Label:
            text: 'Welcome'
            font_size: 32
        
        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Email/Username'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Log In'
            font_size: 32
            on_press: root.do_login(login.text, password.text)
